 <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <%= render 'items', product: item.product, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
          <%# <% raise @order.inspect%>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
        <tr>
           <th colspan="4">
            EMAIL:         <%= @order.email %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</section>